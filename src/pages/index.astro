---
import Layout from '@layouts/Layout.astro';
import { SITE_CONFIG } from '@config/site';
import SpotlightCard from '@components/ui/SpotlightCard.astro';
import TechLogo from '@components/ui/TechLogo.astro';
import LogoCarousel from '@components/ui/LogoCarousel.astro';
import ContactForm from '@components/ContactForm.astro';
---

<Layout>
  <!-- ============================================ -->
  <!-- HERO - Con Efecto Visual Dram√°tico -->
  <!-- ============================================ -->
  <header class="min-h-screen flex flex-col justify-center px-6 lg:px-20 pt-24 relative overflow-hidden">
    <!-- Animated gradient orbs -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
      <div class="absolute top-20 left-1/4 w-96 h-96 bg-sapphire/30 rounded-full blur-[128px] animate-pulse"></div>
      <div class="absolute bottom-20 right-1/4 w-80 h-80 bg-emerald-500/20 rounded-full blur-[100px] animate-pulse" style="animation-delay: 1s"></div>
    </div>
    
    <div class="max-w-4xl mx-auto w-full text-center relative z-10">
      <!-- Headline con efecto de escritura -->
      <h1 class="text-5xl md:text-6xl lg:text-8xl font-bold leading-[0.95] mb-8 reveal">
        <span class="text-ivory block">{SITE_CONFIG.heroTitle.split(',')[0]},</span>
        <span class="gradient-text block mt-2">{SITE_CONFIG.heroTitle.split(',')[1]}</span>
      </h1>
      
      <!-- Subheadline con highlight -->
      <p class="text-lg md:text-xl text-ivory/70 leading-relaxed max-w-2xl mx-auto mb-12 reveal delay-1">
        <span class="text-red-400/80">¬øCu√°ntos pedidos perdiste esta semana</span> porque no pudiste contestar a tiempo? 
        <span class="text-emerald-400">Nosotros los capturamos todos.</span> Autom√°ticamente.
      </p>
      
      <!-- CTA con efecto visual -->
      <div class="flex flex-col sm:flex-row justify-center gap-4 mb-8 reveal delay-2">
        <a 
          href="#contacto"
          class="group relative inline-flex items-center justify-center gap-3 px-10 py-5 text-lg font-semibold text-obsidian bg-ivory rounded-2xl overflow-hidden transition-all duration-500 hover:shadow-[0_0_50px_rgba(255,255,255,0.3)] hover:-translate-y-1"
        >
          <!-- Shimmer effect -->
          <div class="absolute inset-0 -translate-x-full bg-gradient-to-r from-transparent via-white/50 to-transparent group-hover:translate-x-full transition-transform duration-1000"></div>
          <span class="relative">{SITE_CONFIG.ctaPrimary}</span>
          <svg class="relative w-5 h-5 transition-transform group-hover:translate-x-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
          </svg>
        </a>
      </div>
      
      <!-- Trust indicators -->
      <div class="flex flex-wrap justify-center gap-6 text-ivory/40 text-sm reveal delay-4">
        <span class="flex items-center gap-2">
          <svg class="w-4 h-4 text-emerald-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
          Sin tarjeta
        </span>
        <span class="flex items-center gap-2">
          <svg class="w-4 h-4 text-emerald-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
          Sin compromiso
        </span>
        <span class="flex items-center gap-2">
          <svg class="w-4 h-4 text-emerald-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
          7 d√≠as de prueba
        </span>
      </div>
    </div>
    
    <!-- Scroll indicator mejorado -->
    <div class="absolute bottom-8 left-1/2 -translate-x-1/2 flex flex-col items-center gap-2">
      <span class="text-ivory/30 text-xs uppercase tracking-widest">Descubre m√°s</span>
      <div class="w-6 h-10 rounded-full border-2 border-ivory/20 flex justify-center pt-2">
        <div class="w-1 h-3 bg-ivory/40 rounded-full animate-bounce"></div>
      </div>
    </div>
  </header>

  <!-- ============================================ -->
  <!-- LOGOS CAROUSEL -->
  <!-- ============================================ -->
  <section class="py-12 border-t border-white/5">
    <p class="text-center text-ivory/30 uppercase tracking-[0.2em] text-xs mb-6">
      Respaldados por
    </p>
    <LogoCarousel logos={SITE_CONFIG.platformStack} speed={25} />
  </section>

  <!-- ============================================ -->
  <!-- PAIN POINTS - Dise√±o Ultra Creativo -->
  <!-- ============================================ -->
  <section class="py-32 px-6 lg:px-20 relative overflow-hidden">
    <!-- Background effects -->
    <div class="absolute inset-0 pointer-events-none">
      <div class="absolute top-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-red-500/20 to-transparent"></div>
      <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[800px] h-[800px] bg-red-950/20 rounded-full blur-[200px]"></div>
    </div>
    
    <div class="max-w-7xl mx-auto relative">
      <!-- Header con efecto glitch -->
      <div class="text-center mb-24">
        <div class="inline-flex items-center gap-3 px-5 py-2.5 bg-red-500/10 border border-red-500/20 rounded-full mb-8 reveal backdrop-blur-sm">
          <span class="relative flex h-3 w-3">
            <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-red-400 opacity-75"></span>
            <span class="relative inline-flex rounded-full h-3 w-3 bg-red-500"></span>
          </span>
          <span class="text-red-400 text-sm font-medium">¬øTe suena familiar?</span>
        </div>
        
        <h2 class="text-4xl md:text-6xl font-bold text-ivory mb-4 reveal delay-1">
          El problema no eres t√∫
        </h2>
        <p class="text-xl md:text-2xl text-ivory/40 reveal delay-2">
          Es que no puedes estar en <span class="text-red-400/80">todos lados</span> a la vez
        </p>
      </div>
      
      <!-- Cards con dise√±o premium -->
      <div class="grid lg:grid-cols-3 gap-6 lg:gap-8">
        
        <!-- Card 1: WhatsApp -->
        <div class="reveal-scale delay-1 group">
          <div class="relative h-full p-1 rounded-[2rem] bg-gradient-to-b from-red-500/20 via-red-500/5 to-transparent">
            <div class="relative h-full p-8 rounded-[1.8rem] bg-obsidian/80 backdrop-blur-xl overflow-hidden">
              <!-- N√∫mero flotante -->
              <div class="absolute -top-4 -right-4 w-24 h-24 flex items-center justify-center">
                <span class="text-[120px] font-black text-red-500/[0.07] group-hover:text-red-500/[0.15] transition-colors duration-500">1</span>
              </div>
              
              <!-- Mockup visual - Phone con WhatsApp -->
              <div class="relative mb-8">
                <div class="w-20 h-36 mx-auto bg-gradient-to-b from-gray-800 to-gray-900 rounded-2xl border border-gray-700 p-1.5 shadow-2xl group-hover:scale-105 transition-transform duration-500">
                  <div class="w-full h-full bg-gradient-to-b from-emerald-900/50 to-gray-900 rounded-xl flex flex-col items-center justify-center gap-1">
                    <div class="w-8 h-1.5 bg-gray-700 rounded-full"></div>
                    <div class="w-6 h-1.5 bg-gray-700 rounded-full"></div>
                    <div class="w-7 h-1.5 bg-red-500/50 rounded-full animate-pulse"></div>
                    <div class="w-5 h-1.5 bg-gray-700 rounded-full"></div>
                    <div class="w-8 h-1.5 bg-red-500/50 rounded-full animate-pulse" style="animation-delay: 0.5s"></div>
                  </div>
                </div>
                <!-- Notificaci√≥n badge -->
                <div class="absolute -top-2 -right-4 w-10 h-10 bg-red-500 rounded-full flex items-center justify-center shadow-lg shadow-red-500/50 animate-bounce">
                  <span class="text-white text-sm font-bold">12</span>
                </div>
              </div>
              
              <!-- Content -->
              <div class="relative">
                <h3 class="text-2xl font-bold text-red-400 mb-3">
                  ¬øContestas WhatsApp mientras comes?
                </h3>
                <p class="text-ivory/50 leading-relaxed mb-6">
                  Cada mensaje sin responder es un cliente que se va con tu competencia.
                </p>
                
                <!-- Solution -->
                <div class="p-4 rounded-xl bg-emerald-500/10 border border-emerald-500/20">
                  <div class="flex items-center gap-3">
                    <div class="w-10 h-10 rounded-full bg-emerald-500/20 flex items-center justify-center flex-shrink-0">
                      <svg class="w-5 h-5 text-emerald-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                      </svg>
                    </div>
                    <p class="text-emerald-400 font-medium">Un bot que responde en 3 segundos. Siempre.</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Card 2: Excel -->
        <div class="reveal-scale delay-2 group">
          <div class="relative h-full p-1 rounded-[2rem] bg-gradient-to-b from-red-500/20 via-red-500/5 to-transparent">
            <div class="relative h-full p-8 rounded-[1.8rem] bg-obsidian/80 backdrop-blur-xl overflow-hidden">
              <!-- N√∫mero flotante -->
              <div class="absolute -top-4 -right-4 w-24 h-24 flex items-center justify-center">
                <span class="text-[120px] font-black text-red-500/[0.07] group-hover:text-red-500/[0.15] transition-colors duration-500">2</span>
              </div>
              
              <!-- Mockup visual - Spreadsheet con errores -->
              <div class="relative mb-8">
                <div class="w-full max-w-[200px] mx-auto bg-gradient-to-b from-gray-800 to-gray-900 rounded-xl border border-gray-700 p-2 shadow-2xl group-hover:scale-105 transition-transform duration-500">
                  <div class="space-y-1">
                    <div class="flex gap-1">
                      <div class="w-8 h-4 bg-green-900/50 rounded-sm"></div>
                      <div class="flex-1 h-4 bg-gray-700 rounded-sm"></div>
                      <div class="w-12 h-4 bg-gray-700 rounded-sm"></div>
                    </div>
                    <div class="flex gap-1">
                      <div class="w-8 h-4 bg-gray-800 rounded-sm"></div>
                      <div class="flex-1 h-4 bg-red-500/30 rounded-sm border border-red-500/50"></div>
                      <div class="w-12 h-4 bg-gray-800 rounded-sm"></div>
                    </div>
                    <div class="flex gap-1">
                      <div class="w-8 h-4 bg-gray-800 rounded-sm"></div>
                      <div class="flex-1 h-4 bg-gray-700 rounded-sm"></div>
                      <div class="w-12 h-4 bg-red-500/30 rounded-sm border border-red-500/50"></div>
                    </div>
                    <div class="flex gap-1">
                      <div class="w-8 h-4 bg-gray-800 rounded-sm"></div>
                      <div class="flex-1 h-4 bg-red-500/30 rounded-sm border border-red-500/50"></div>
                      <div class="w-12 h-4 bg-gray-700 rounded-sm"></div>
                    </div>
                  </div>
                </div>
                <!-- Error icon -->
                <div class="absolute -bottom-2 -right-2 w-10 h-10 bg-red-500 rounded-full flex items-center justify-center shadow-lg shadow-red-500/50">
                  <svg class="w-5 h-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                  </svg>
                </div>
              </div>
              
              <!-- Content -->
              <div class="relative">
                <h3 class="text-2xl font-bold text-red-400 mb-3">
                  ¬øCopias pedidos a mano a tu Excel?
                </h3>
                <p class="text-ivory/50 leading-relaxed mb-6">
                  Errores, pedidos perdidos, horas muertas. Tu tiempo vale m√°s.
                </p>
                
                <!-- Solution -->
                <div class="p-4 rounded-xl bg-emerald-500/10 border border-emerald-500/20">
                  <div class="flex items-center gap-3">
                    <div class="w-10 h-10 rounded-full bg-emerald-500/20 flex items-center justify-center flex-shrink-0">
                      <svg class="w-5 h-5 text-emerald-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                      </svg>
                    </div>
                    <p class="text-emerald-400 font-medium">Sincronizaci√≥n autom√°tica. Cero errores.</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Card 3: 24/7 -->
        <div class="reveal-scale delay-3 group">
          <div class="relative h-full p-1 rounded-[2rem] bg-gradient-to-b from-red-500/20 via-red-500/5 to-transparent">
            <div class="relative h-full p-8 rounded-[1.8rem] bg-obsidian/80 backdrop-blur-xl overflow-hidden">
              <!-- N√∫mero flotante -->
              <div class="absolute -top-4 -right-4 w-24 h-24 flex items-center justify-center">
                <span class="text-[120px] font-black text-red-500/[0.07] group-hover:text-red-500/[0.15] transition-colors duration-500">3</span>
              </div>
              
              <!-- Mockup visual - Clock at 2am -->
              <div class="relative mb-8">
                <div class="w-24 h-24 mx-auto relative">
                  <!-- Clock face -->
                  <div class="absolute inset-0 rounded-full bg-gradient-to-b from-gray-800 to-gray-900 border-4 border-gray-700 shadow-2xl group-hover:scale-110 transition-transform duration-500">
                    <!-- Clock hands -->
                    <div class="absolute top-1/2 left-1/2 w-1 h-8 bg-red-400 rounded-full origin-bottom -translate-x-1/2 -translate-y-full rotate-[60deg]"></div>
                    <div class="absolute top-1/2 left-1/2 w-0.5 h-10 bg-ivory/60 rounded-full origin-bottom -translate-x-1/2 -translate-y-full rotate-[180deg]"></div>
                    <div class="absolute top-1/2 left-1/2 w-2 h-2 bg-red-400 rounded-full -translate-x-1/2 -translate-y-1/2"></div>
                  </div>
                  <!-- 2:00 AM label -->
                  <div class="absolute -bottom-6 left-1/2 -translate-x-1/2 px-3 py-1 bg-red-500/20 rounded-full">
                    <span class="text-red-400 text-sm font-bold">2:00 AM</span>
                  </div>
                </div>
                <!-- Zzz -->
                <div class="absolute top-0 right-4 text-ivory/20 animate-pulse">
                  <span class="text-2xl">üí§</span>
                </div>
              </div>
              
              <!-- Content -->
              <div class="relative mt-8">
                <h3 class="text-2xl font-bold text-red-400 mb-3">
                  ¬øCierras ventas a las 2am?
                </h3>
                <p class="text-ivory/50 leading-relaxed mb-6">
                  Tu negocio duerme cuando t√∫ duermes. Y pierdes dinero.
                </p>
                
                <!-- Solution -->
                <div class="p-4 rounded-xl bg-emerald-500/10 border border-emerald-500/20">
                  <div class="flex items-center gap-3">
                    <div class="w-10 h-10 rounded-full bg-emerald-500/20 flex items-center justify-center flex-shrink-0">
                      <svg class="w-5 h-5 text-emerald-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                      </svg>
                    </div>
                    <p class="text-emerald-400 font-medium">Ventas 24/7. T√∫ descansas, nosotros vendemos.</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        
      </div>
      
      <!-- CTA despu√©s de pain points -->
      <div class="text-center mt-16 reveal delay-4">
        <p class="text-ivory/40 text-lg mb-4">¬øCansado de esto?</p>
        <a 
          href="#contacto"
          class="inline-flex items-center gap-2 text-emerald-400 hover:text-emerald-300 transition-colors group font-medium"
        >
          <span>Hay una mejor forma ‚Üí</span>
        </a>
      </div>
    </div>
  </section>

  <!-- ============================================ -->
  <!-- BENEFITS - Stats Grandes con Iconos -->
  <!-- ============================================ -->
  <section id="beneficios" class="py-32 px-6 lg:px-20 border-t border-white/5 relative overflow-hidden">
    <!-- Background glow -->
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[800px] h-[400px] bg-sapphire/10 rounded-full blur-[150px] pointer-events-none"></div>
    
    <div class="max-w-6xl mx-auto relative">
      <div class="text-center mb-20">
        <p class="text-sapphire-light uppercase tracking-[0.2em] text-xs mb-4 reveal">Lo que ganas</p>
        <h2 class="text-3xl md:text-5xl font-bold text-ivory reveal delay-1">
          Resultados que importan
        </h2>
      </div>
      
      <div class="grid md:grid-cols-3 gap-12">
        {SITE_CONFIG.benefits.map((benefit, i) => (
          <div class={`reveal-scale delay-${i + 1} text-center group`}>
            <!-- Icon grande -->
            <div class="w-24 h-24 mx-auto mb-8 rounded-3xl bg-gradient-to-br from-sapphire/20 to-violet-500/10 border border-sapphire/20 flex items-center justify-center group-hover:scale-110 group-hover:border-sapphire/40 transition-all duration-500">
              {benefit.icon === 'clock' && (
                <svg class="w-12 h-12 text-sapphire-light" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              )}
              {benefit.icon === 'money' && (
                <svg class="w-12 h-12 text-sapphire-light" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              )}
              {benefit.icon === 'focus' && (
                <svg class="w-12 h-12 text-sapphire-light" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                </svg>
              )}
            </div>
            
            <!-- Stat animado -->
            <div class="relative mb-4">
              <span class="text-7xl font-bold gradient-text">{benefit.stat}</span>
              <div class="absolute -bottom-2 left-1/2 -translate-x-1/2 w-16 h-1 bg-gradient-to-r from-transparent via-sapphire/50 to-transparent"></div>
            </div>
            <p class="text-ivory/40 text-sm uppercase tracking-wider mb-6">{benefit.statLabel}</p>
            
            <h3 class="text-xl font-semibold text-ivory mb-3">{benefit.title}</h3>
            <p class="text-ivory/50 leading-relaxed">{benefit.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- ============================================ -->
  <!-- BEFORE/AFTER - Split Design -->
  <!-- ============================================ -->
  <section class="py-32 px-6 lg:px-20 relative">
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-16 reveal">
        <p class="text-sapphire-light uppercase tracking-[0.2em] text-xs mb-4">La Transformaci√≥n</p>
        <h2 class="text-3xl md:text-5xl font-bold text-ivory">Tu vida antes vs despu√©s</h2>
      </div>
      
      <div class="relative grid md:grid-cols-2 gap-0 md:gap-1 rounded-3xl overflow-hidden">
        <!-- Divider central -->
        <div class="hidden md:flex absolute inset-y-0 left-1/2 -translate-x-1/2 w-16 items-center justify-center z-10">
          <div class="w-px h-full bg-gradient-to-b from-transparent via-white/20 to-transparent"></div>
          <div class="absolute w-14 h-14 rounded-full bg-obsidian border-2 border-white/20 flex items-center justify-center">
            <svg class="w-6 h-6 text-white/60" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
            </svg>
          </div>
        </div>
        
        <!-- BEFORE -->
        <div class="reveal-left p-10 md:p-12 bg-gradient-to-br from-red-950/30 via-red-950/10 to-transparent rounded-t-3xl md:rounded-l-3xl md:rounded-tr-none">
          <div class="flex items-center gap-4 mb-8">
            <div class="w-14 h-14 rounded-2xl bg-red-500/20 flex items-center justify-center">
              <svg class="w-7 h-7 text-red-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <div>
              <p class="text-red-400/60 text-xs uppercase tracking-wider">Antes</p>
              <h3 class="text-2xl font-bold text-red-400">{SITE_CONFIG.problem.title}</h3>
            </div>
          </div>
          <ul class="space-y-5">
            {SITE_CONFIG.problem.points.map(point => (
              <li class="flex items-start gap-4 text-ivory/60">
                <span class="flex-shrink-0 w-6 h-6 rounded-full bg-red-500/20 flex items-center justify-center mt-0.5">
                  <svg class="w-3 h-3 text-red-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M6 18L18 6M6 6l12 12" />
                  </svg>
                </span>
                <span class="text-base">{point}</span>
              </li>
            ))}
          </ul>
        </div>

        <!-- AFTER -->
        <div class="reveal-right p-10 md:p-12 bg-gradient-to-bl from-emerald-950/30 via-emerald-950/10 to-transparent rounded-b-3xl md:rounded-r-3xl md:rounded-bl-none">
          <div class="flex items-center gap-4 mb-8">
