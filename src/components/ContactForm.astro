---
/**
 * ContactForm - Formulario de contacto
 * Se integra con el endpoint /api/audit-submission
 * Includes conditional "other description" field
 */
interface Props {
  variant?: 'default' | 'compact';
}

const { variant = 'default' } = Astro.props;
---

<div class="contact-form-wrapper" data-variant={variant}>
  <form 
    id="contact-form"
    class="space-y-4"
  >
    {variant === 'default' && (
      <div class="text-center mb-6">
        <h3 class="text-2xl font-bold text-ivory mb-2">Agenda tu llamada gratis</h3>
        <p class="text-ivory/50 text-sm">15 minutos para entender tu negocio</p>
      </div>
    )}
    
    <!-- Nombre -->
    <div>
      <input 
        type="text" 
        name="name"
        placeholder="Tu nombre"
        required
        class="form-input w-full px-4 py-3 bg-white/5 border border-white/10 rounded-xl text-ivory placeholder:text-ivory/30 focus:outline-none focus:border-sapphire/50 focus:ring-1 focus:ring-sapphire/50 transition-all"
      />
    </div>

    <!-- Email -->
    <div>
      <input 
        type="email" 
        name="email"
        placeholder="Tu correo electrónico"
        required
        class="form-input w-full px-4 py-3 bg-white/5 border border-white/10 rounded-xl text-ivory placeholder:text-ivory/30 focus:outline-none focus:border-sapphire/50 focus:ring-1 focus:ring-sapphire/50 transition-all"
      />
    </div>
    
    <!-- Teléfono -->
    <div>
      <input 
        type="tel" 
        name="phone"
        placeholder="Tu teléfono (ej: +503 7000-0000)"
        required
        class="form-input w-full px-4 py-3 bg-white/5 border border-white/10 rounded-xl text-ivory placeholder:text-ivory/30 focus:outline-none focus:border-sapphire/50 focus:ring-1 focus:ring-sapphire/50 transition-all"
      />
    </div>
    
    <!-- Problema principal -->
    <div>
      <select 
        name="painPoint"
        id="painPoint-select"
        required
        class="form-input w-full px-4 py-3 bg-white/5 border border-white/10 rounded-xl text-ivory focus:outline-none focus:border-sapphire/50 focus:ring-1 focus:ring-sapphire/50 transition-all appearance-none cursor-pointer"
      >
        <option value="" class="bg-obsidian">¿Cuál es tu mayor dolor?</option>
        <option value="mensajes" class="bg-obsidian">No puedo contestar todos los mensajes</option>
        <option value="excel" class="bg-obsidian">Pierdo tiempo copiando a Excel</option>
        <option value="horario" class="bg-obsidian">Pierdo ventas fuera de horario</option>
        <option value="seguimiento" class="bg-obsidian">No tengo tiempo para dar seguimiento</option>
        <option value="otro" class="bg-obsidian">Otro problema</option>
      </select>
    </div>

    <!-- Descripción "Otro problema" - Solo visible cuando selecciona "otro" -->
    <div id="other-description-container" class="hidden">
      <textarea 
        name="otherDescription"
        id="other-description"
        placeholder="Describe tu problema..."
        rows="3"
        class="form-input w-full px-4 py-3 bg-white/5 border border-white/10 rounded-xl text-ivory placeholder:text-ivory/30 focus:outline-none focus:border-sapphire/50 focus:ring-1 focus:ring-sapphire/50 transition-all resize-none"
      ></textarea>
    </div>
    
    <!-- Error message -->
    <div id="form-error" class="hidden p-3 bg-red-500/10 border border-red-500/30 rounded-lg">
      <p class="text-red-400 text-sm flex items-center gap-2">
        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <span id="error-text"></span>
      </p>
    </div>

    <!-- Submit -->
    <button 
      type="submit"
      class="group w-full relative overflow-hidden px-6 py-4 bg-gradient-to-r from-sapphire to-violet-500 text-white font-semibold rounded-xl transition-all duration-300 hover:shadow-lg hover:shadow-sapphire/30 hover:-translate-y-0.5 disabled:opacity-50 disabled:cursor-not-allowed"
    >
      <!-- Shimmer effect -->
      <div class="absolute inset-0 -translate-x-full bg-gradient-to-r from-transparent via-white/20 to-transparent group-hover:translate-x-full transition-transform duration-1000"></div>
      <span class="relative flex items-center justify-center gap-2">
        <span id="btn-text">Solicita nuestros servicios</span>
        <svg id="btn-icon" class="w-5 h-5 transition-transform group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
        </svg>
        <svg id="btn-spinner" class="hidden w-5 h-5 animate-spin" viewBox="0 0 24 24" fill="none">
          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
      </span>
    </button>
    
    <!-- Trust indicators -->
    <div class="flex justify-center gap-4 text-ivory/30 text-xs pt-2">
      <span class="flex items-center gap-1">
        <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
        </svg>
        Datos seguros
      </span>
      <span class="flex items-center gap-1">
        <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
        </svg>
        Sin compromiso
      </span>
    </div>
  </form>
  
  <!-- Success message -->
  <div id="form-success" class="hidden text-center py-8">
    <div class="w-16 h-16 mx-auto mb-4 rounded-full bg-emerald-500/20 flex items-center justify-center">
      <svg class="w-8 h-8 text-emerald-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
      </svg>
    </div>
    <h3 class="text-2xl font-bold text-ivory mb-2">¡Recibido!</h3>
    <p class="text-ivory/50">Te contactamos en menos de 2 horas</p>
  </div>
</div>

<script>
  const form = document.getElementById('contact-form') as HTMLFormElement;
  const successMsg = document.getElementById('form-success');
  const errorContainer = document.getElementById('form-error');
  const errorText = document.getElementById('error-text');
  const painPointSelect = document.getElementById('painPoint-select') as HTMLSelectElement;
  const otherContainer = document.getElementById('other-description-container');
  const otherTextarea = document.getElementById('other-description') as HTMLTextAreaElement;
  const btnText = document.getElementById('btn-text');
  const btnIcon = document.getElementById('btn-icon');
  const btnSpinner = document.getElementById('btn-spinner');
  const submitBtn = form?.querySelector('button[type="submit"]') as HTMLButtonElement;

  // Toggle "other description" field visibility
  painPointSelect?.addEventListener('change', () => {
    if (painPointSelect.value === 'otro') {
      otherContainer?.classList.remove('hidden');
      otherContainer?.classList.add('animate-fadeIn');
      otherTextarea?.setAttribute('required', 'true');
    } else {
      otherContainer?.classList.add('hidden');
      otherContainer?.classList.remove('animate-fadeIn');
      otherTextarea?.removeAttribute('required');
      if (otherTextarea) otherTextarea.value = '';
    }
  });

  // Clear error styling on input
  form?.querySelectorAll('.form-input').forEach(input => {
    input.addEventListener('input', () => {
      input.classList.remove('border-red-500', 'bg-red-500/10');
      input.classList.add('border-white/10');
      errorContainer?.classList.add('hidden');
    });
  });

  // Form submission
  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    // Reset errors
    errorContainer?.classList.add('hidden');
    form.querySelectorAll('.form-input').forEach(input => {
      input.classList.remove('border-red-500', 'bg-red-500/10');
    });

    const formData = new FormData(form);
    const data = Object.fromEntries(formData);
    
    // Show loading state
    if (btnText) btnText.textContent = 'Procesando...';
    btnIcon?.classList.add('hidden');
    btnSpinner?.classList.remove('hidden');
    if (submitBtn) submitBtn.disabled = true;
    
    try {
      const response = await fetch('/api/audit-submission', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(data)
      });

      const result = await response.json();

      if (!response.ok) {
        // Handle validation errors
        if (result.errors && result.errors.length > 0) {
          // Show error message
          if (errorText) errorText.textContent = result.errors[0].message;
          errorContainer?.classList.remove('hidden');
          
          // Highlight error fields
          result.errors.forEach((err: { field: string }) => {
            const field = form.querySelector(`[name="${err.field}"]`);
            if (field) {
              field.classList.remove('border-white/10');
              field.classList.add('border-red-500', 'bg-red-500/10');
            }
          });
        } else {
          if (errorText) errorText.textContent = result.error || 'Error al enviar';
          errorContainer?.classList.remove('hidden');
        }
        
        // Reset button
        if (btnText) btnText.textContent = 'Solicita nuestros servicios';
        btnIcon?.classList.remove('hidden');
        btnSpinner?.classList.add('hidden');
        if (submitBtn) submitBtn.disabled = false;
        return;
      }
      
      // Show success
      form.classList.add('hidden');
      successMsg?.classList.remove('hidden');
      
    } catch (error) {
      console.error('Error:', error);
      if (errorText) errorText.textContent = 'Error de conexión. Intenta de nuevo.';
      errorContainer?.classList.remove('hidden');
      
      // Reset button
      if (btnText) btnText.textContent = 'Solicita nuestros servicios';
      btnIcon?.classList.remove('hidden');
      btnSpinner?.classList.add('hidden');
      if (submitBtn) submitBtn.disabled = false;
    }
  });
</script>

<style>
  select option {
    background-color: #0a0a0f;
    color: #f5f5f0;
  }
  
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(-10px); }
    to { opacity: 1; transform: translateY(0); }
  }
  
  .animate-fadeIn {
    animation: fadeIn 0.3s ease forwards;
  }
</style>
